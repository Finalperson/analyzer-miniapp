{
  "name": "@analyzer/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:dev": "prisma migrate dev --name init",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@analyzer/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@prisma/client": "^5.19.1",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prisma": "^5.19.1",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
